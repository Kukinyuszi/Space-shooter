<Window x:Class="Space_shooter.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Space_shooter"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow"
        Title="MainMenuWindow" Height="450" Width="800" Background="LightBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="1" Content="Try writing god while playing"/>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <Button Content="Start" Margin="10" Click="Button_Click" Padding="10" />
            <Button Content="Settings" Margin="10" Click="Button_Click_1" Padding="10" />
            <Button Content="Close"  Margin="10" Click="Button_Click_2" Padding="10" />
        </StackPanel>

    </Grid>
</Window>
